<Window x:Class="FontBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontBrowser"
        mc:Ignorable="d"
        Title="Font Browser" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <ListView Name="LV" SelectionChanged="LV_SelectionChanged" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300" />
                </GridView>
            </ListView.View>
        </ListView>
        <DockPanel Name="DP"></DockPanel>
    </StackPanel>
</Window>
